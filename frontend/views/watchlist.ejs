<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/common.css">
    <title>Rugant | WatchList</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">RUGANT</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <div class="container d-flex justify-content-between">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="watchlist">WatchList</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="login">Logout</a>
                    </li>
                </ul>
            </div>
            <div>
                <a class="nav-link" href="profile">Profile</a>
            </div>
        </div>
    </nav>

    <h2>WATCHLIST</h2>
    <% if (stocks_list.length> 0) { %>
        <ul>
            <% stocks_list.forEach((item)=> { %>
                <li
                    style="background-color: red; color: black; padding: 15px; font-size: 30px; font-weight: 1000; text-align: left;">
                    <%= item.stock_symbol %>
                        <form action="/dashboard" method="GET">
                            <input type="hidden" name="given" value="<%= item.stock_symbol %>">
                            <button type="submit"
                                style="background-color: black; color: red; padding: 5px;">Search</button>
                        </form>
                        <button>DELETE</button>
                </li>
                <% }); %>
        </ul>
        <% } else { %>
            <p>No data found.</p>
            <% } %>
                <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
                <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>

</html>