    <div class="container-fluid">
        <div class="row">
        </div>
        <!-- Right half column (if needed) -->
        <div class="col-md-3">
            <form action="/dashboard" id="form_login">
                <ul>
                    <input type="text" name="username" id="username" required="true" placeholder="Username" style="color:
                        black; background-color: rgb(243, 10, 10); font-weight: 1000;">
                    <input type="password" name="password" id="password" required="true" placeholder="Password"
                        minlength="8" style="color:
                        black; background-color: rgb(243, 10, 10); font-weight: 1000;">
                </ul>
                <a class="btn btn-primary" href="/dashboard" role="button" type="submit"
                    style="width: 200px; color: black; background-color: rgb(243, 10, 10); font-weight: 1000;">Login</a>
            </form>
            <br>
            <a href="/signup" style="font-size: larger; font-weight: 800;">New
                User?</a>
        </div>
    </div>
    </div>
